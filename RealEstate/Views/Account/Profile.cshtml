@model RealEstate.Models.Domain.ApplicationUser

@{
    ViewData["Title"] = "Profile";
}

<link href="/css/bootstrap.min.css" rel="stylesheet" />
@Html.ValidationSummary()
<div class="container">
    <div class="row">
        <div class="col-md-6 center-block">
            <h3>User Profile</h3>
            <form asp-action="Profile" method="post">
                <div class="row">
                </div>
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" class="form-control" asp-for="FirstName" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>

                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text" class="form-control" asp-for="LastName" />
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>

                </div>

                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" asp-for="Adresss" />
                    <span class="text-danger" asp-validation-for="Adresss"></span>

                </div>

                <div class="form-group">
                    <label> City Id</label>
                    <input type="password" class="form-control" asp-for="CityId" />
                    <span class="text-danger" asp-validation-for="CityId"></span>

                </div>

                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="text" class="form-control" asp-for="PhoneNumber" />
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>

                    <button type="submit" class="btn btn-info">Submit</button>
                   
            </form>
        </div>
    </div>
</div>

