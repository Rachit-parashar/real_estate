@model RealEstate.Models.Dto.RegistrationModel
@{
    Layout = null;
    var buyer= "buyer";
    var seller= "seller";
}

<link href="/css/bootstrap.min.css" rel="stylesheet" />
@Html.ValidationSummary()
<div class="container">
    <div class="row">
        <div class="col-md-6 center-block">
            <h3>Registration</h3>
            <form asp-action="Registration" method="post">
                <div class="row">
                    <div class="form-check col-md-6">
                        <input class="form-check-input" asp-for="UserRole" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="@buyer" />
                        <label class="form-check-label" for="inlineRadio1">Buyer</label>
                        
                    </div>
                    <div class="form-check col-md-6">
                        <input class="form-check-input" asp-for="UserRole" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="@seller" />
                        <label class="form-check-label" for="inlineRadio2">Seller</label>
                    </div>
                </div>
                <div class="form-group">
                    <label>FName*</label>
                    <input type="text" class="form-control" asp-for="UserName" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>

                </div>

                <div class="form-group">
                    <label>Password (eg. John@123)</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>

                </div>

                <div class="form-group">
                    <label>Password confirm</label>
                    <input type="password" class="form-control" asp-for="ConformPassword" />
                    <span class="text-danger" asp-validation-for="ConformPassword"></span>

                </div>

                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="text" class="form-control" asp-for="PhoneNumber" />
                    <span class="text-danger" asp-validation-for="PhoneNumber"></span>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        <span class="text-info">@TempData["msg"]</span>
                    </div>
                }

                <button type="submit" class="btn btn-info">Registration</button>
                @*<a class="btn btn-primary" href="/UserAuthentication/Login">Login</a>*@
                    <a class="btn btn-primary " asp-area="" asp-controller="Account" asp-action="Login">Login</a>
            </form>
        </div>
    </div>
</div>
